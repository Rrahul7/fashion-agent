{
  "expo": {
    "name": "Drip",
    "slug": "drip-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "drip",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1F2937"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.drip.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs access to camera to analyze your outfits and style",
        "NSPhotoLibraryUsageDescription": "This app needs access to photo library to analyze your fashion choices",
        "NSMicrophoneUsageDescription": "This app may need microphone access for video content"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1F2937"
      },
      "package": "com.drip.mobile",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to analyze your fashion style.",
          "cameraPermission": "The app accesses your camera to capture outfits for analysis."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Drip to access your camera to capture outfit photos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
